{
	"env": {
		"es2020": true,
		"node": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 11
	},
	"rules": {
		"indent": [ "error" ],
		"linebreak-style": [ "error", "unix" ],
		"quotes": [ "error", "single" ],
		"semi": [ "error", "always" ],
		"no-console": "warn",
		"no-unused-vars": "warn",
		"max-len": ["warn", 150],
		"require-await": "warn"
	},
	"globals": {
		"winston": "writable"
	}
}
